-
  const logo = require('@img/logo.svg');
  const slogan = 'Дашборды, которые сэкономят ваши деньги и время';
  const btnName = 'Заказать звонок'

header.header
  .header__content
    .container
      .row.align-items-center
        .col-auto.col-md
          .row.align-items-center
            .col-auto
              a.logo(href="/")
                img(src=emptyImg data-src=logo, alt="logo").lazyload

            .col.d-none.d-md-block
              .header__slogan= slogan

        .col
          .row.align-items-center.justify-content-end
            .col-auto.d-none.d-sm-block
              +btn({
                name: btnName,
                size: 'small',
                color: 'white-transparent',
                href: '#popup-form',
              })(class="fancybox")

            .col-auto
              button.btn-menu
