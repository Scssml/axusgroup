-
  const itemsAdvantages = [
    {
      text: 'Видно эффективность каждого сотрудника и каждого вложенного рубля',
      img: require('@img/adv-1.svg'),
    },
    {
      text: 'Больше не нужно ждать «ручные» отчеты. Любой отчет доступен в 1 клик',
      img: require('@img/adv-2.svg'),
    },
    {
      text: 'Все работает 24/7 на любых устройствах со 100%-й точностью данных',
      img: require('@img/adv-3.svg'),
    },
  ];

section.advantages
  .container
    .row
      each val, index in itemsAdvantages
        .col-auto.col-lg-4.mb-lg-0(
          class=(index + 1 === itemsAdvantages.length) ? 'mb-0' : 'mb-3'
        )
          .advantage
            .advantage__img
              img(src=emptyImg data-src=val.img, alt="advantage").lazyload

            .advantage__text= val.text