-
  const defaultOptionsTextIcon = {
    img: '',
    text: '',
  };

mixin textIcon(options)
  - options = Object.assign({}, defaultOptionsTextIcon, options);

  .text-icon&attributes(attributes)
    .text-icon__img 
      img(src=emptyImg data-src=options.img, alt="icon").lazyload

    span.size-3!= options.text 
